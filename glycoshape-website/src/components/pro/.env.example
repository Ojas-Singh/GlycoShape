# GlycoShape UMS Environment Configuration
# Copy this file to .env and update the values for your environment

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:5000
REACT_APP_PRODUCTION_API_URL=https://glycoshape.org/api/ums

# PayPal Configuration
REACT_APP_PAYPAL_CLIENT_ID=your-paypal-client-id-here
REACT_APP_PAYPAL_ENVIRONMENT=sandbox

# Application Configuration
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0
REACT_APP_APP_NAME=GlycoShape UMS

# Feature Flags
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_ENABLE_PAYPAL=true
REACT_APP_ENABLE_ANALYTICS=true

# Security Configuration
REACT_APP_TOKEN_REFRESH_THRESHOLD=300000
REACT_APP_SESSION_TIMEOUT=900000

# UI Configuration
REACT_APP_ITEMS_PER_PAGE=10
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_SUPPORTED_FILE_TYPES=.pdf,.doc,.docx,.txt

# External Services
REACT_APP_HELP_DESK_URL=https://glycoshape.org/help
REACT_APP_DOCUMENTATION_URL=https://glycoshape.org/docs
REACT_APP_STATUS_PAGE_URL=https://status.glycoshape.org
